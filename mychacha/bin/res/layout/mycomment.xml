<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@id/WccMyCommentLayout" 
    android:background="@drawable/main_bg" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/mycomment_title_layout" 
        android:background="@drawable/title" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true">
        <TextView 
            android:textSize="20.0dip" 
            android:textColor="#ffffffff" 
            android:id="@id/tv_mycomment_titlename" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_margin="10.0dip" 
            android:text="添加评论" 
            android:layout_centerInParent="true" />
        <Button 
            android:textSize="15.0dip" 
            android:textColor="#ffffffff" 
            android:id="@id/btn_mycomment_back" 
            android:background="@drawable/b_backtop" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="5.0dip" 
            android:text="返回" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" />
        <Button 
            android:textSize="15.0dip" 
            android:textColor="#ffffffff" 
            android:id="@id/btn_mycomment_submit" 
            android:background="@drawable/b_top_right" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginRight="5.0dip" 
            android:text="提交" 
            android:layout_alignParentRight="true" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginLeft="5.0dip" 
        android:layout_marginTop="5.0dip" 
        android:layout_marginRight="5.0dip" 
        android:layout_below="@id/mycomment_title_layout">
        <TextView 
            android:textSize="20.0dip" 
            android:textColor="#ff000000" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="评论内容：" />
        <EditText 
            android:gravity="top" 
            android:id="@id/edit_mycomment" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:hint="70个字符以内" 
            android:maxLength="71" />
    </LinearLayout>
</RelativeLayout>