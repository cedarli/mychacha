<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@id/AddNewWeiboSynLayout" 
    android:background="#ff98989e" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:id="@id/addnewweibosyn_title_layout" 
        android:background="@drawable/title" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true">
        <TextView 
            android:textSize="20.0dip" 
            android:textColor="#ffffffff" 
            android:id="@id/tv_addnewweibosyn_titlename" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_margin="10.0dip" 
            android:text="新增同步" 
            android:layout_centerInParent="true" />
        <Button 
            android:textSize="15.0dip" 
            android:textColor="#ffffffff" 
            android:id="@id/btn_addnewweibosyn_back" 
            android:background="@drawable/b_backtop" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="5.0dip" 
            android:text="返回" 
            android:layout_alignParentLeft="true" 
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <LinearLayout 
        android:orientation="vertical" 
        android:id="@id/lL_addnewweibosyn_list" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_below="@id/addnewweibosyn_title_layout" 
        android:layout_alignParentBottom="true">
        <ListView 
            android:id="@id/addnewweibosyn_list" 
            android:scrollbars="none" 
            android:fadingEdge="none" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:scrollingCache="false" 
            android:cacheColorHint="#00000000" 
            android:divider="@drawable/list_line_black" />
        <ImageView 
            android:background="@drawable/list_line_black" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>