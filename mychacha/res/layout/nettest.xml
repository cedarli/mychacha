<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <Button android:id="@id/btn_test" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="测试" android:layout_alignParentTop="true" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/btn_test">
        <TextView android:id="@id/show_tv" android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="显示" />
    </ScrollView>
    <Button android:id="@id/btn_send" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="发送" android:layout_alignParentBottom="true" />
</RelativeLayout>